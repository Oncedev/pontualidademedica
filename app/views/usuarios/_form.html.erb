<section class="section_class_padrao">

  <h2>Cadastre-se preenchendo o formul√°rio abaixo</h2>

 <section id="whapper_conteudo">

    <%= form_for(@usuario, :html => {:id  =>"form_cadastro"}) do |f| %>
    <% if @usuario.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @usuario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

     
        <div class="field">
          <label for="nome">Nome</label><br>
          <%= f.text_field :nome, placeholder: 'Exemplo:Mariana' %>
        </div>

        <div class="field">
          <label for="email">Email</label>
        </div>
        
        <div class="field">
          <%= f.text_field :email, placeholder: 'Exemplo:mariana@gmail.com' %><br>
          <label for="senha">Senha</label>
        </div>

        <div class="field">
          <%= f.password_field :senha, placeholder: 'Senha' %><br>
          <label for="senha_confirmation">Confirme a senha</label>
        </div>
        
        <div class="field">
          <%= f.password_field :senha_confirmation, placeholder: 'Senha' %>
          <%= hidden_field_tag "redir", params[:redir] %><br>
        </div>

        <div class="actions" id="div_encapsula_buttun_cadastrar">
            <button type="submit" id="cadastrar" class="butons_right">Cadastrar</button>
        </div><!-- end incapsula -->
      

</section>
</section>
    <% end %>
<div id="none"></div>
 



