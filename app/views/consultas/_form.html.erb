<script>
$(document).ready(function() {
  $('.date_picker').datetimepicker({
    lang: 'pt',
    maxDate: 0,
    mask: true,
    timepicker: false,
    format: 'd/m/Y'
    });
  $('.time_field').mask('99:99');
  });
</script>
<section class="section_class_padrao">

<%= form_for(@consulta) do |f| %>
  <% if @consulta.errors.any? || @medico.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @medico.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      <% @consulta.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= label_tag "Nome do médico" %><br>
    <%= text_field_tag "nome_medico", @medico.nome, id: 'nome' %>
  </div>
  <div class="field">
    <%= label_tag "CRM do médico" %><br>
    <%= number_field_tag "CRM_medico", @medico.CRM, id: 'crm' %>
  </div>
  <div class="field">
    <%= f.label :data, "Data" %><br>
    <%= f.text_field :data_consulta, class: "date_picker" %>
  </div>
  <div class="field">
    <%= f.label :hora_marcacao, "Hora de marcação" %><br>
    <%= f.text_field :hora_marcacao, class: "time_field" %>
  </div>
  <div class="field">
    <%= f.label :hora_atendimento, "Hora de atendimento" %><br>
    <%= f.text_field :hora_atendimento, class: "time_field" %>
  </div>
  <br>
  <div class="actions">
    <button type="submit" id="button_registrar">Registrar consulta</button>
  </div>

  <br>
<br>
<br>

<% end %>
</section>

<script>
 var pesquisa_crm = document.querySelector('#pesquisa_crm'),
     button_pesquisar = document.querySelector('#button_pesquisar');

     pesquisa_crm.style.display = 'none';
     button_pesquisar.style.display = 'none';
</script>



